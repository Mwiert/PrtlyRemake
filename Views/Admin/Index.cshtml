@model IEnumerable<Remake.Models.kullanıcı>
@using Remake.Models;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}

<div class="container mt-2"> @*mt kapatılabilir*@
        <div class="modal" id="myModalOK">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                     <h4 class="modal-title d-flex justify-content-center" style="margin-top:-1rem;">Emin Misiniz?</h4>
                    <div class="modal-body">
                        <div class="col-12 grid-margin stretch-card">
                <div class="card " style="height:100%; margin-bottom:-3rem;">
                  <div class="card-body">
                              <h1 class="card-title text-center mt-2">Kişiyi silmek istediğinize emin misiniz?</h1>
                  </div>
                </div>
              </div>
                    </div>
                    <div class="modal-footer">
                        @using (Html.BeginForm("DeleteUser","Admin",FormMethod.Post))
{
                                     <button type="submit" class="btn btn-gradient-dark me-2">Sil</button>
                                                   <input value="" id="RowsValue" type="text" style="visibility:hidden" name="UserEmail">

}
                            <button type="submit" data-bs-dismiss="modal"  class="btn btn-gradient-red me-2">İptal Et</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <h2 class="card-title text-center">Kullanıcılar</h2>

<div class="col-md-12">
                <div class="table-responsive card">
                  <div class="card-body">
                    <table id="table" class="table table-bordered text-center ">
                      <thead>
                        <tr>
            <th> Adı</th>
            <th>Email</th>
             <th>Rolü</th>
                        </tr>
                      </thead>
                      <tbody>
                         @foreach(var item in Model)
                             {
                    <tr class="table-primary">
                  <td style=" user-select: none;" >@item.Ad</td>
                  <td style=" user-select: none;" >@item.Email</td>
                  <td style=" user-select: none;" >@item.Rol.RolAdi</td>

                   <td><a type="submit" data-bs-toggle="modal" data-bs-target="#myModalOK" class="btn btn-gradient-dark btn-sm">Sil</a></td>
                 
                        </tr>
                        }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
 <div class="dropup-center dropup">
            <button class="btn btn-gradient-dark " style="border-radius:7rem; position: fixed; bottom: 20px;right: 20px;margin-right:3rem;"type="button" id="dropupCenterBtn" data-bs-toggle="dropdown" aria-expanded="false">
              +
            </button>
            <ul class="dropdown-menu text-center" style="background-color:transparent;"aria-labelledby="dropupCenterBtn">
              <li><button type="button" class="btn btn-gradient-dark"   style="border-radius:7rem;"data-bs-toggle="modal" data-bs-target="#myModal">Yeni Kullanıcı</button> </li>
              <li><button type="button"  style="border-radius:7rem;" class="btn btn-gradient-dark" data-bs-toggle="modal" data-bs-target="#myModal1">Yeni Rol</button></li>
            </ul>
          </div>
    @using (Html.BeginForm("AddUser","Admin",FormMethod.Post))
{
<div class="container mt-2"> @*mt kapatılabilir*@

        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                     <h4 class="modal-title d-flex justify-content-center" style="margin-top:-1rem;">Kullanıcı Ekle</h4>
                    <div class="modal-body">
                        <div class="col-12 grid-margin stretch-card">
                <div class="card " style="height:100%; margin-bottom:-3rem;">
                  <div class="card-body">
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Kullanıcı Adı</label>
                        <input type="text" class="form-control" id="exampleInputName1" name="UsersName"  required placeholder="Kullanıcı Adı">
                      </div>
                        <div class="form-group">
                        <label for="exampleInputName1">Kullanıcı Email </label>
                        <input type="text" class="form-control" id="exampleInputName1" name="UsersEmail"  required placeholder="Kullanıcı Email Adresi">
                      </div>
                        <div class="form-group">
                        <label for="exampleInputName1">Kullanıcı Şifresi</label>
                        <input type="password" class="form-control" id="exampleInputName1" name="UsersPassword"  required placeholder="Kullanıcı Şifresi">
                      </div>
                      <div class="form-group">
                      <label for="exampleFormControlSelect1">Rol Seçimi</label>
                      <select class="form-control form-control-lg" id="Selects">
                          <option>-</option>
                          @foreach(var item in (List<Roller>)ViewBag.RoleList)
                                        {
                                            <option value="@item.RolId">@item.RolAdi</option>       
                                        }
                                        <input value="" id="inputNameChange" type="text" style="visibility:hidden" name="RoleId">
                                           
                      </select>
                    </div>
                      <div class="form-group">
                        <label>File upload</label>
                        <input type="file" name="UsersImg" class="file-upload-default">
                        <div class="input-group col-xs-12">
                          <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle ">
                          <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-dark" type="button">Yükle</button>
                          </span>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-gradient-light" data-bs-dismiss="modal">İptal Et</button>
                         <button type="submit" onclick="writeName()" class="btn btn-gradient-dark me-2">Onayla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
       }

    @using (Html.BeginForm("AddNewRole", "Admin", FormMethod.Post))
