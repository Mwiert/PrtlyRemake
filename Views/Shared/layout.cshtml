@*
    
*@
@{
   string nmspace;
    if (User.IsInRole("Admin"))
    {
        nmspace = "Admin";
    }
    else if (User.IsInRole("Direktör"))
    {
        nmspace = "Direktör";
    }
    else if (User.IsInRole("Saha Ekibi"))
    {
        nmspace="Saha Ekibi";
    }
    else
    {
        nmspace = "Muhasebe";
    }
    
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <m{eta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Remake</title>
    <link rel="stylesheet" href ="~/TemplateL/assets/vendors/mdi/css/materialdesignicons.min.css"/>  
    <link rel="stylesheet" href ="~/TemplateL/assets/vendors/css/vendor.bundle.base.css"/>  
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href ="~/TemplateL/assets/css/style.css"/>  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="shortcut icon" href="~/TemplateL/assets/images/favicon.ico" />
  </head>
  <body>
    <div class="container-scroller">
      </div>
      <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="navbar-brand brand-logo" href="@Url.ActionLink("Index","Home")"><img src="assets/images/logo.svg" alt="logo" /></a>
          <a class="navbar-brand brand-logo-mini" href="@Url.ActionLink("Index","Home")"><img src="assets/images/logo-mini.svg" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
          <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
            <span class="mdi mdi-menu"></span>
          </button>
          <div class="search-field d-none d-md-block">
            <form class="d-flex align-items-center h-100" action="#">
              <div class="input-group">
                <div class="input-group-prepend bg-transparent">
                  <i class="input-group-text border-0 mdi mdi-magnify"></i>
                </div>
                <input type="text" class="form-control bg-transparent border-0" placeholder="Ara">
              </div>
            </form>
          </div>
          <ul class="navbar-nav navbar-nav-right">
            <li class="nav-item nav-logout d-none d-lg-block">
              <a class="nav-link" href="@Url.Action("Logout","Home")">
                <i class="mdi mdi-power"></i>
              </a>
            </li>
          </ul>
          <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
          </button>
        </div>
      </nav>
      <div class="container-fluid page-body-wrapper">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
          <ul class="nav">
            <li class="nav-item nav-profile">
              <a href="#" class="nav-link">
                <div class="nav-profile-image">
                  <div class="fa-solid fa-user fa-2xl" style="margin-top: 20px; margin-left:10px"></div>
                </div>
                <div class="nav-profile-text d-flex flex-column">
                  <span class="font-weight-bold mb-2">@nmspace</span>
                  <span class="text-secondary text-small">@User.Identity.Name</span>
                </div>
                <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="@Url.ActionLink("Index","Home")">
                <span class="menu-title">Ana Sayfa</span>
                <i class="mdi mdi-home menu-icon"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Index","Explorers")">
                <span class="menu-title">Keşifler</span>
                <i class="mdi mdi-format-list-bulleted menu-icon"></i>
              </a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Index","Category")">
                <span class="menu-title">Kategoriler</span>
                <i class="mdi mdi-format-list-bulleted menu-icon"></i>
              </a>
          </li>
           <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Index","Product")">
                <span class="menu-title">Ürünler</span>
                <i class="mdi mdi-format-list-bulleted menu-icon"></i>
              </a>
          </li>
          @if(User.IsInRole("Admin")){

                        <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Index","Admin")">
                <span class="menu-title">Admin Paneli</span>
                <i class="mdi mdi-home menu-icon"></i>
              </a>
          </li>
          }
           </ul>
        </nav>
        <div class="main-panel">
          <div class="content-wrapper">
           
            @RenderBody()
      </div>

    <script src="~/TemplateL/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/TemplateL/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/TemplateL/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/TemplateL/assets/js/off-canvas.js"></script>
    <script src="~/TemplateL/assets/js/hoverable-collapse.js"></script>
    <script src="~/TemplateL/assets/js/misc.js"></script>
    <script src="~/TemplateL/assets/js/dashboard.js"></script>
    <script src="~/TemplateL/assets/js/todolist.js"></script>
    <script src="~/TemplateL/assets/js/script.js"></script>
  </body>
</html>

