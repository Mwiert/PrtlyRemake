@model IEnumerable<Remake.Models.Kategoriler>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/layout.cshtml";
}
    @using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
{
<div class="container mt-2"> @*mt kapatılabilir*@

        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                     <h4 class="modal-title d-flex justify-content-center" style="margin-top:-1rem;">Kategori Ekle</h4>
                    <div class="modal-body">
                        <div class="col-12 grid-margin stretch-card">
                <div class="card " style="height:100%; margin-bottom:-3rem;">
                  <div class="card-body">
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Kategori Adı</label>
                        <input type="text" class="form-control" id="exampleInputName1" name="CatName"  required placeholder="Kategori Adı">
                      </div>
                    </form>
                  </div>
                </div>
              </div>
                    </div>
                    <div class="modal-footer">
                         <button type="submit" class="btn btn-gradient-primary me-2">Onayla</button>
                      <button type="submit" class="btn btn-light" data-bs-dismiss="modal">İptal Et</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
 <div class="col-auto grid-margin stretch-card justify-content-center">
  <div class="card">
    <div class="card-body">
      <table class="table table-hover " style="margin-top:-2rem;min-height:5rem">
          <h3 class="text-center">Kategori Adı</h3>
        <tbody>
            <div style="height:3rem;width:auto"></div>
            @foreach(var item in Model){
                 <tr class="d-flex justify-content-around">
            <td>@item.KategoriAdi</td>
          </tr>
            }
         
        </tbody>

      </table>
             </div>
  </div>
  <button type="button" style="border-radius:7rem; position: fixed; bottom: 20px;right: 20px;margin-right:3rem;" class="btn btn-primary " style="margin-bottom:1rem;" data-bs-toggle="modal" data-bs-target="#myModal">Kategori Ekle</button>
   
</div>
  