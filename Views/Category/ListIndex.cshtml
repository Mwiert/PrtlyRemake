              <button type="button" style="border-radius:7rem; position: fixed; bottom: 20px;right: 20px;margin-right:3rem;" class="btn btn-gradient-dark " style="margin-bottom:1rem;" data-bs-toggle="modal" data-bs-target="#myModal">Ürün Ekle</button>


 <script type="text/javascript">
            
GenerateCode = function() {
    var result = '';
    var characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
    var charactersLength = characters.length;
    for (var i = 0; i < 10; i++) {
        result += characters.charAt(Math.floor(Math.random() * charactersLength));

    }
    document.getElementById("UrunKodu").setAttribute("value", result)
};
         

   var table = document.getElementById("table"),indexy
$("#table").on("dblclick", "td", function(){
    var send = $(this).parent("tr").find("td:first").text();
            $.ajax({
            url: "@Url.Action("mekangetir","Product")",
            type: 'POST',
            data: {send : send},
            dataType: 'json',
            success: function(data) {
                $("#UrunKoduId").val(data.urunKodu);
                $("#UrunMarka").val(data.marka);
                $("#UrunAitligi").val(data.kesifAitligi);
                $("#UrunSatisFiyat").val(data.satisFiyati);
                $("#UrunAdeti").val(data.urunAdet);
                $("#UrunFiyat").val(data.urunFiyati);
                $("#UrunCat").val(data.urunKategorisi);
                $("#UrunAdi").val(data.urunAdi);
                $("#myModalProductInfo").modal('show');
            },
            error: function(err) {
                 swal("Hata Oluştu","Beklenmedik bir hata oluştu. Lütfen biraz bekleyip tekrar deneyiniz.","warning")
            }
        });
});
  

 </script>