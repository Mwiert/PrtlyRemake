                <div class="card " style="height:100%; margin-bottom:-3rem;">
                  <div class="card-body">
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Mekan Adı</label>
                        <input type="text" class="form-control" id="exampleInputName1" name="ExpName"  required placeholder="Mekan Adı">
                      </div>
                    </form>
                  </div>
                </div>
              </div>
                    </div>
                    <div class="modal-footer">
                         <button type="submit" class="btn btn-gradient-dark me-2">Onayla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

            <h3 class="card-title text-center " style="margin-top:-1rem;padding:1rem;">@ViewBag.KesifAdi</h3>

            <div class="form-group text-center">
                     <h3>Mekanlar</h3>
                      <select class="form-control form-control-sm" id="mekanAdi" name="MekanAdi">
